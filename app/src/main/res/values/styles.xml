<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#edeb2f</item>
    </style>
    <style name="WorkArea_Blue">
        <item name="android:background">#879dd0</item>
    </style>
    <style name="tbl">
        <item name="android:background">#4d8af3</item>
        <item name="android:layout_marginBottom">2sp</item>
        <item name="android:layout_weight">0.11</item>
    </style>
    <style name="tbl_text">
        <item name="android:textColor">#fcf9f9</item>
    </style>
    <style name="weather_button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/weatherinfo_button</item>
    </style>
    <style name="tbl_item">
        <item name="android:layout_marginBottom">5pt</item>
        <item name="android:background">@drawable/tbl_item_bg</item>
        <item name="android:paddingBottom">3pt</item>
    </style>


</resources>
